<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Upload with Multer</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 2rem;
            background-color: #f8f9fa;
        }
        .file-upload-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .files-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 2rem;
        }
        .file-item {
            border-bottom: 1px solid #eee;
            padding: 1rem 0;
        }
        .file-item:last-child {
            border-bottom: none;
        }
        .upload-area {
            border: 2px dashed #ddd;
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        .upload-area:hover {
            border-color: #0d6efd;
            background-color: #f8f9fa;
        }
        .preview-image {
            max-width: 100px;
            max-height: 100px;
            margin-right: 1rem;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="text-center mb-4">File Upload System</h1>

    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <% if (typeof success !== 'undefined') { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="file-upload-container">
                <h3>Single File Upload</h3>
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="upload-area" id="single-upload-area">
                        <p>Drag and drop a file here or click to select</p>
                        <input type="file" name="file" id="single-file-input" class="form-control" onchange="updateFileLabel(this, 'single-file-label')">
                        <p id="single-file-label" class="mt-2 text-muted"></p>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Upload File</button>
                </form>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="file-upload-container">
                <h3>Multiple Files Upload</h3>
                <form action="/upload-multiple" method="post" enctype="multipart/form-data">
                    <div class="upload-area" id="multi-upload-area">
                        <p>Drag and drop files here or click to select (max 5 files)</p>
                        <input type="file" name="files" id="multi-file-input" class="form-control" multiple onchange="updateMultipleFileLabel(this)">
                        <p id="multi-file-label" class="mt-2 text-muted"></p>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Upload Files</button>
                </form>
            </div>
        </div>
    </div>

    <div class="files-container">
        <h3>Uploaded Files</h3>
        <% if (files && files.length > 0) { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Preview</th>
                        <th>Filename</th>
                        <th>Upload Date</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% files.forEach(function(file) { %>
                        <tr class="file-item">
                            <td>
                                <% if (file.name.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
                                    <img src="<%= file.url %>" class="preview-image" alt="<%= file.name %>">
                                <% } else { %>
                                    <i class="bi bi-file-earmark-text fs-1"></i>
                                <% } %>
                            </td>
                            <td><%= file.name %></td>
                            <td><%= file.date.toLocaleString() %></td>
                            <td>
                                <a href="<%= file.url %>" class="btn btn-sm btn-info" target="_blank">View</a>
                                <a href="<%= file.url %>" class="btn btn-sm btn-secondary" download>Download</a>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-muted">No files uploaded yet.</p>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function updateFileLabel(input, labelId) {
        const label = document.getElementById(labelId);
        if (input.files.length > 0) {
            label.textContent = `Selected file: ${input.files[0].name}`;
        } else {
            label.textContent = '';
        }
    }

    function updateMultipleFileLabel(input) {
        const label = document.getElementById('multi-file-label');
        if (input.files.length > 0) {
            label.textContent = `Selected ${input.files.length} file(s)`;
        } else {
            label.textContent = '';
        }
    }

    // Drag and drop functionality
    const singleUploadArea = document.getElementById('single-upload-area');
    const multiUploadArea = document.getElementById('multi-upload-area');
    const singleFileInput = document.getElementById('single-file-input');
    const multiFileInput = document.getElementById('multi-file-input');

    // Prevent default behavior for drag events
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        singleUploadArea.addEventListener(eventName, preventDefaults, false);
        multiUploadArea.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
    }

    // Highlight drop area when item is dragged over it
    ['dragenter', 'dragover'].forEach(eventName => {
        singleUploadArea.addEventListener(eventName, highlight, false);
        multiUploadArea.addEventListener(eventName, highlight, false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
        singleUploadArea.addEventListener(eventName, unhighlight, false);
        multiUploadArea.addEventListener(eventName, unhighlight, false);
    });

    function highlight(e) {
        this.classList.add('border-primary', 'bg-light');
    }

    function unhighlight(e) {
        this.classList.remove('border-primary', 'bg-light');
    }

    // Handle dropped files
    singleUploadArea.addEventListener('drop', handleSingleDrop, false);
    multiUploadArea.addEventListener('drop', handleMultipleDrop, false);

    function handleSingleDrop(e) {
        const dt = e.dataTransfer;
        const files = dt.files;
        if (files.length > 0) {
            singleFileInput.files = files;
            updateFileLabel(singleFileInput, 'single-file-label');
        }
    }

    function handleMultipleDrop(e) {
        const dt = e.dataTransfer;
        const files = dt.files;
        multiFileInput.files = files;
        updateMultipleFileLabel(multiFileInput);
    }
</script>
</body>
</html>