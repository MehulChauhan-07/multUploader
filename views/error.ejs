<div class="row justify-content-center">
  <div class="col-md-6 text-center">
    <div class="card shadow-sm">
      <div class="card-body py-5">
        <%
        let errorIcon = 'fa-exclamation-circle';
        let errorClass = 'text-danger';
        let errorTitle = 'Oops! Something went wrong';

        if (error && error.status === 404) {
          errorIcon = 'fa-map-signs';
          errorClass = 'text-warning';
          errorTitle = 'Page Not Found';
        } else if (error && error.status === 403) {
          errorIcon = 'fa-lock';
          errorClass = 'text-primary';
          errorTitle = 'Access Denied';
        } else if (error && error.status === 429) {
          errorIcon = 'fa-hourglass-end';
          errorClass = 'text-info';
          errorTitle = 'Too Many Requests';
        }
        %>
        <i class="fas <%= errorIcon %> fa-4x <%= errorClass %> mb-4"></i>
        <h2 class="card-title mb-4"><%= errorTitle %></h2>
        <p class="card-text text-muted mb-4"><%= message %></p>

        <% if (process.env.NODE_ENV === "development" && error && Object.keys(error).length > 0) { %>
          <div class="alert alert-danger text-start">
            <h6 class="alert-heading">Error Details:</h6>
            <pre class="mb-0"><%= JSON.stringify(error, null, 2) %></pre>
          </div>
        <% } %>

        <div class="mt-4">
          <a href="/upload" class="btn btn-primary me-2">
            <i class="fas fa-home me-2"></i>
            Go Home
          </a>
          <button onclick="history.back()" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Go Back
          </button>
        </div>

        <div class="mt-4">
          <p class="text-muted">
            <small>Error Time: <%= new Date('2025-06-13T16:43:00Z').toLocaleString() %></small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>